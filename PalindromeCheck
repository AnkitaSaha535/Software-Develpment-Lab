#include <stdio.h>
#include <string.h>

int main() {
    char word[20];
    int i, len, flag = 0;

    printf("Enter a word: ");
    scanf("%s", word);

    len = strlen(word);

    for(i = 0; i < len/2; i++) {
        if(word[i] != word[len - i - 1]) {
            flag = 1;
            break;
        }
    }

    if(flag) printf("%s is not a palindrome.", word);
    else printf("%s is a palindrome.", word);

    return 0;
}
